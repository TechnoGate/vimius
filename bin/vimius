#!/usr/bin/env ruby
# -*- encoding: utf-8 -*-

# Add the lib folder to the load path
$:.push File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib'))
# Load vimius
require 'vimius'
# Start the CLI
begin
  TechnoGate::Vimius::CLI::Runner.start
ensure
  TechnoGate::Vimius.config.save if TechnoGate::Vimius.config.respond_to?(:save)
end
